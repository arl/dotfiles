{    
    // Editor

    // Controls the font family.
    "editor.fontFamily": "'Fira Code', 'Consolas', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    // Controls if selections have rounded corners
    "editor.roundedSelection": false,
    "editor.mouseWheelZoom": true,
    "workbench.statusBar.visible": true,

    // differentiate between current line highlight and actual selection
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#135564",
        "editor.selectionHighlightBackground": "#135564"
    },


    // Files

    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/tags": true,
        "**/.*.swp": true
    },


    // Go

    // Pick 'gofmt', 'goimports' or 'goreturns' to run on format.
    "go.formatTool": "goimports",
    // Enable gocode's autobuild feature
    "go.gocodeAutoBuild": false,


    // C/C++

    "C_Cpp.intelliSenseEngine": "Default",
    "extensions.ignoreRecommendations": false,
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressUpdateNotice": false,
        "suppressWelcomeNotice": true
    },
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "editor.minimap.enabled": false,
    "workbench.sideBar.location": "left",
    "window.menuBarVisibility": "default",
    "window.zoomLevel": 0,

    // Vim

    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "explorer.confirmDelete": false,
    "breadcrumbs.enabled": true,
    "terminal.integrated.rendererType": "dom",
    "workbench.startupEditor": "newUntitledFile",
    "go.buildTags": "integration",
    "workbench.colorTheme": "Gruvbox Dark (Medium)"
}
